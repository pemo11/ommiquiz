# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH=/app/backend/logs/app.log
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_BACKUP_COUNT=5

# Application Configuration
APP_NAME=ommiquiz-backend
APP_VERSION=1.0.30
ENVIRONMENT=development

# Auth0 Configuration
AUTH0_DOMAIN=your-tenant.us.auth0.com
AUTH0_AUDIENCE=https://api.ommiquiz.local
# Optional overrides
# AUTH0_ISSUER=https://your-tenant.us.auth0.com/
# AUTH0_ALGORITHMS=RS256

# Download log storage (SQLite database path)
DOWNLOAD_LOG_DB_PATH=/app/backend/download_logs.db

# FastAPI Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Supabase Configuration
# Get these from: Supabase Dashboard > Project Settings > API
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_JWT_SECRET=your-jwt-secret-here
DATABASE_URL=postgresql://postgres:your-password@db.your-project-id.supabase.co:5432/postgres

# Site Configuration
SITE_URL=http://localhost:3000

# Flashcard Storage Configuration
# Options: local, s3
FLASHCARDS_STORAGE=local
FLASHCARDS_DIR=/app/flashcards

# S3/DigitalOcean Spaces Configuration (required if FLASHCARDS_STORAGE=s3)
S3_BUCKET=your-bucket-name
S3_ENDPOINT_URL=https://your-region.digitaloceanspaces.com
S3_PREFIX=flashcards/
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Example for production:
# ENVIRONMENT=production
# LOG_LEVEL=WARNING
# BETTERSTACK_ENABLED=true
# BETTERSTACK_SOURCE_TOKEN=bt_abc123def456...